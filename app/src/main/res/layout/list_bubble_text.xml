<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rv_chat_receive_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp">
        <ImageView
            android:id="@+id/iv_receive_text_avatar"
            android:layout_alignParentStart="true"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/book_user"/>
        <com.ruochuan.bubblelayout.BubbleLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_receive_text_avatar"
            app:orientation="left"
            app:borderColor="#ffe">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_chat_message_receive_text_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="在吗？"/>
                <TextView
                    android:id="@+id/tv_chat_message_receive_text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_marginStart="5dp"
                    android:textSize="12sp"
                    android:text="2018:00"/>
            </LinearLayout>
        </com.ruochuan.bubblelayout.BubbleLayout>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rv_chat_send_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp">
        <ImageView
            android:id="@+id/iv_send_text_avatar"
            android:layout_alignParentEnd="true"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/book_user"/>
        <com.ruochuan.bubblelayout.BubbleLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/iv_send_text_avatar"
            app:orientation="right"
            app:bgColor="#efffde"
            app:borderColor="#97bb8a">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_chat_message_send_text_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="在吗？"/>
                <TextView
                    android:id="@+id/tv_chat_message_send_text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginStart="5dp"
                    android:textSize="12sp"
                    android:text="16:00"/>
            </LinearLayout>
        </com.ruochuan.bubblelayout.BubbleLayout>
    </RelativeLayout>

</RelativeLayout>