<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_message_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/rv_chat_receive_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp">
        <ImageView
            android:id="@+id/iv_receive_voice_avatar"
            android:layout_alignParentStart="true"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/book_user"/>
        <com.ruochuan.bubblelayout.BubbleLayout
            android:id="@+id/bl_receive_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_receive_voice_avatar"
            app:orientation="left"
            app:borderColor="#ffe">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_chat_message_receive_voice"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/receive_voice_play_anim"/>
                    <TextView
                        android:id="@+id/tv_chat_message_receive_voice_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="4"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/gray"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="''"
                        android:textColor="@color/gray"
                        android:textSize="18sp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_chat_message_receive_voice_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_marginStart="25dp"
                    android:textSize="12sp"
                    android:text="16:39"/>
            </LinearLayout>
        </com.ruochuan.bubblelayout.BubbleLayout>
        <ImageView
            android:id="@+id/iv_unread_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_voice_red_notification"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/bl_receive_bubble"
            android:layout_centerVertical="true"/>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rv_chat_send_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp">
        <ImageView
            android:id="@+id/iv_send_voice_avatar"
            android:layout_alignParentEnd="true"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/book_user"/>
        <com.ruochuan.bubblelayout.BubbleLayout
            android:id="@+id/bl_send_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/iv_send_voice_avatar"
            app:orientation="right"
            app:bgColor="#efffde"
            app:borderColor="#97bb8a">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_chat_message_send_voice_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/gray"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="''"
                        android:textColor="@color/gray"
                        android:textSize="18sp"/>
                    <ImageView
                        android:id="@+id/iv_chat_message_send_voice"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/send_voice_play_anim"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_chat_message_send_voice_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginStart="5dp"
                    android:textSize="12sp"
                    android:text="16:00"/>
            </LinearLayout>
        </com.ruochuan.bubblelayout.BubbleLayout>
    </RelativeLayout>

</RelativeLayout>