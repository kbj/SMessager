<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_chat"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp">
            <ImageView
                android:id="@+id/iv_chat_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/book_user"/>
            <ImageView
                android:id="@+id/iv_lock"
                android:layout_toEndOf="@+id/iv_chat_avatar"
                android:gravity="center_vertical"
                android:layout_width="18dp"
                android:layout_marginTop="4dp"
                android:layout_height="18dp"
                android:layout_marginStart="10dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:src="@mipmap/ic_lock_white_24dp"/>
            <TextView
                android:id="@+id/tv_chat_user_name"
                android:layout_toEndOf="@+id/iv_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginStart="2dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="null"/>

            <TextView
                android:id="@+id/tv_last_message_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:gravity="bottom"
                android:layout_toEndOf="@+id/iv_chat_avatar"
                android:layout_above="@+id/iv_lock"
                android:layout_alignBottom="@+id/iv_chat_avatar"
                android:textSize="14sp"
                android:text="@string/seen_on"/>
            <TextView
                android:id="@+id/tv_last_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_last_message_label"
                android:layout_alignBottom="@+id/tv_last_message_label"
                android:text="2018 22 22"
                android:textSize="14sp"
                android:textColor="@color/light_gray"
                android:layout_marginStart="3dp"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_chat_message"
        android:background="@mipmap/background_hd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame_bg"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_input_message"
            android:layout_width="0dp"
            android:background="@drawable/input_msg_background"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:padding="5dp"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/iv_voice"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@mipmap/keyboard_voice_grey"
            android:padding="4dp" />
        <me.weey.graduationproject.client.smessager.widget.AudioRecordButton
            android:id="@+id/voice_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_recordnormal"
            android:gravity="center"
            android:minHeight="0dp"
            android:padding="5dp"
            android:text="@string/normal"
            android:textColor="#727272"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/iv_insert_photo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp"
            android:padding="4dp"
            android:background="@mipmap/insert_photo_grey"/>
        <ImageView
            android:id="@+id/iv_send_message"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/send_button"/>
    </LinearLayout>
</LinearLayout>